                    <control type="label">
                        <posx>12</posx>
                        <posy>30</posy>
                        <width>252</width>
                        <font>itemSubTitle</font>
                        <textcolor>textActive</textcolor>
                        <label fallback="13205">[B]$INFO[ListItem.label2][/B]</label>
