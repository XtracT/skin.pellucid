                        <thumb></thumb>
                    </item>
                    <item>
                        <label>$ADDON[plugin.program.iagl 30429]</label>
                        <label2 fallback="31253">$INFO[Container(113).ListItem.Property(nplayers)]</label2>
                        <thumb></thumb>
                    </item>
                </content>
